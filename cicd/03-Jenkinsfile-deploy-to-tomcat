pipeline {
  agent any
  tools {
    maven 'maven-3.6.3' 
  }
  stages {
    stage ('Build') {
      steps {
        sh 'mvn clean package'
      }
    }
    stage ('Deploy') {
      steps {
        script {
          deploy adapters: [tomcat9(credentialsId: 'tomcat_credential', path: '', url: 'http://34.125.90.132:9000')], contextPath: '/hello-world', onFailure: false, war: '/var/lib/jenkins/workspace/tomcat/target/hello-world.war' 
        }
      }
    }
  }
}
